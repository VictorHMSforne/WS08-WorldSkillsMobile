<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WS.Views.PageListar">
    <ContentPage.Content>
        <StackLayout>
            <ListView x:Name="lsvHistorico" RowHeight="170" ItemSelected="lsvHistorico_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <StackLayout Orientation="Vertical">
                                <Label Text="Nome:"/>
                                <Label Text="{Binding Nome}"/>
                                <Label Text="Horário de Entrada:"/>
                                <Label Text="{Binding HorarioEntrada}"/>
                                <Label Text="Horário de Saída:"/>
                                <Label Text="{Binding HorarioSaida}"/>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>